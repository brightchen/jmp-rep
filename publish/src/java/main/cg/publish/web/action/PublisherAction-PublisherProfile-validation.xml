<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	
	<field name="publisher.publishername">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field>
    
    <field name="publisherUser.username">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field>
    
    <field name="publisherUser.firstname">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field>
    
    <field name="publisherUser.lastname">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
    </field>
    
    <field name="publisherUser.email">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
          <field-validator type="email">
            <param name="trim">true</param>
            <message key="email.invalid"/>
        </field-validator>
    </field>
    
    <field name="publisherUser.phoneNumber">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"/>
        </field-validator>
        <field-validator type="regex">
			<param name="expression">\d+$</param>
			<message>Phone number must be numeric digits.</message>
		</field-validator>   
    </field>

</validators>