<?xml version="1.0" encoding="iso-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.java.dev.glassfish</groupId>
    <artifactId>glassfish</artifactId>
    <version>b32g</version>
  </parent>
  <artifactId>glassfish-persistence-api</artifactId>
  <name>glassfish-persistence-api</name>
  <description>persistence-api component</description>  

  <dependencies/>  

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
             <manifestFile>./persistence-api.mf</manifestFile>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
